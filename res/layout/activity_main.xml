<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gauge="http://schemas.android.com/apk/res/com.george.obd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Start_Live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start_Live" />

        <Button
            android:id="@+id/Run_Command"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run_Command" />

        <Button
            android:id="@+id/Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop" />

        <Button
            android:id="@+id/Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings" />

        <TextView
            android:id="@+id/rpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.george.obd.GaugeView
            android:id="@+id/rpm_gauge_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            gauge:divisions="5"
            gauge:rangeColors="@array/rangeColors"
            gauge:rangeValues="@array/ranges"
            gauge:scaleEndValue="7000"
            gauge:showInnerRim="false"
            gauge:showOuterBorder="false"
            gauge:showOuterRim="false"
            gauge:subdivisions="2" />

        <com.george.obd.GaugeView
            android:id="@+id/spd_gauge_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            gauge:scaleEndValue="7000"
            gauge:showNeedle="false"
            gauge:showOuterRim="false"
            gauge:showOuterShadow="true"
            gauge:showRanges="false"
            gauge:showText="true"
            gauge:textUnit="%" />
    </LinearLayout>
    

</RelativeLayout>
