<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gauge="http://schemas.android.com/apk/res/com.george.obdreader"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
	    <Button android:id="@+id/home_button" android:layout_width="60dp" android:layout_height="wrap_content"
	        android:background="@drawable/home_button"  android:layout_alignParentLeft="true"/>
	    <!-- <TextView android:layout_width="680dp" android:layout_height="60dp" android:gravity="center_vertical" 
	     	android:paddingLeft="30dp" android:textColor="@android:color/white" android:text="@string/title" 
	     	android:textSize="24sp"/> -->
	    <Button android:id="@+id/back_button" android:layout_width="60dp" android:layout_height="wrap_content"
			android:background="@drawable/back_button"  android:layout_alignParentRight="true"/>

	    <ImageView
	        android:id="@+id/obd_connected"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginRight="50dp"
	        android:layout_marginTop="15dp"
	        android:layout_toLeftOf="@+id/back_button"
	        android:src="@drawable/obd_con" />

	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginRight="30dp"
	        android:layout_marginTop="15dp"
	        android:layout_toLeftOf="@+id/obd_connected"
	        android:src="@drawable/gps_con" 
	        android:visibility="gone" />
	    <TextView
	        android:id="@+id/result"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="35dp"
	        android:layout_toLeftOf="@+id/obd_connected"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
		<TextView
	        android:id="@+id/intake_temperature"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="65dp"
	        android:layout_toLeftOf="@+id/result"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    <TextView
	        android:id="@+id/intake_manifold_pressure"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="50dp"
	        android:layout_toLeftOf="@+id/intake_temperature"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>
    <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent" 
        android:layout_marginTop="-50dp" android:visibility="visible" android:gravity="center_horizontal">        
	   <FrameLayout android:layout_width="200dp" android:layout_height="200dp" 
	     	android:layout_gravity="left|center_vertical" android:orientation="vertical" android:layout_marginLeft="75dp">
		    <com.george.obdreader.GaugeView
            android:id="@+id/fuel_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            gauge:divisions="5"
            gauge:rangeColors="@array/fuel_rangeColors"
            gauge:rangeValues="@array/fuel_ranges"
            gauge:scaleEndValue="20"
            gauge:showInnerRim="true"
            gauge:showOuterBorder="false"
            gauge:showOuterShadow="true"
            gauge:showOuterRim="false"
            gauge:subdivisions="4"  />
		    <!-- <com.george.control.RotateView android:id="@+id/fuel_pointer" android:layout_width="wrap_content" 
	            android:layout_gravity="center" android:layout_height="wrap_content" 
		        android:background="@drawable/main_speed_pointer" android:visibility="visible"/> -->
	    </FrameLayout>  
        <FrameLayout android:layout_width="200dp" android:layout_height="200dp" 
	       android:layout_gravity="right|center_vertical" android:orientation="vertical" android:layout_marginRight="75dp">
	       <com.george.obdreader.GaugeView
            android:id="@+id/speed_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            gauge:divisions="5"
            gauge:rangeColors="@array/speed_rangeColors"
            gauge:rangeValues="@array/speed_ranges"
            gauge:scaleEndValue="220"
            gauge:showInnerRim="true"
            gauge:showOuterBorder="false"
            gauge:showOuterShadow="true"
            gauge:showOuterRim="false"
            gauge:subdivisions="8" />
		    <!-- <com.george.control.RotateView android:id="@+id/rpm_pointer" android:layout_width="wrap_content" 
	            android:layout_gravity="center" android:layout_height="wrap_content" 
		        android:background="@drawable/main_speed_pointer" android:visibility="visible"/> -->
	    </FrameLayout> 	     
	    <FrameLayout android:layout_width="285dp" android:layout_height="285dp" android:layout_gravity="center">
			<com.george.obdreader.GaugeView
            android:id="@+id/rpm_view"
            android:layout_width="285dp"
            android:layout_height="285dp"
            gauge:divisions="5"
            gauge:rangeColors="@array/rpm_rangeColors"
            gauge:rangeValues="@array/rpm_ranges"
            gauge:scaleEndValue="7000"
            gauge:showInnerRim="true"
            gauge:showOuterBorder="false"
            gauge:showOuterShadow="true"
            gauge:showOuterRim="false"
            gauge:subdivisions="2"  />      
			<!-- <com.george.control.RotateView android:id="@+id/speed_pointer" android:layout_width="wrap_content" 
				android:layout_gravity="center" android:layout_height="wrap_content" 
				android:background="@drawable/main_speed_pointer" android:visibility="visible"/> --> 	 	        
        </FrameLayout>
	    <LinearLayout android:layout_width="fill_parent" android:layout_height="170dp" 
	       android:background="@drawable/main_function_bg" android:layout_gravity="bottom" 
	       android:paddingLeft="18dp" android:orientation="horizontal">
	        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"  
	            android:layout_marginTop="40dp" android:layout_weight="1" android:orientation="vertical">
		        <ImageButton android:id="@+id/trouble_codes_button" android:layout_width="wrap_content"    
		           android:layout_height="wrap_content" android:background="@drawable/main_vehicle_check"  
			       />
			    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			      android:layout_marginTop="-25dp"
			      android:layout_gravity="center_horizontal" android:textSize="20sp" android:text="@string/obd_check"/>
		    </LinearLayout>
		    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"  
	            android:layout_marginTop="40dp" android:layout_weight="1" android:orientation="vertical">
			    <ImageButton android:id="@+id/health_setting_button" android:layout_width="wrap_content" 
			        android:layout_height="wrap_content" android:background="@drawable/health_setting"
			        />  
			    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			      android:layout_marginTop="-25dp"
			      android:layout_gravity="center_horizontal" android:textSize="20sp" android:text="@string/obd_health"/>
		     </LinearLayout> 
		     <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"  
	            android:layout_marginTop="10dp" android:layout_weight="1" android:orientation="vertical">
			     <ImageButton android:id="@+id/volume_button" android:layout_width="wrap_content" 	   
			        android:layout_height="wrap_content" android:background="@drawable/main_volume"
			        android:src="@drawable/main_volume_mute"
			       /> 
		     </LinearLayout> 
		     <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"  
	            android:layout_marginTop="40dp" android:layout_weight="1" android:orientation="vertical"> 
			     <ImageButton android:id="@+id/speed_test_button" android:layout_width="wrap_content" 
			        android:layout_height="wrap_content" android:background="@drawable/main_speed_test"
			        /> 
			     <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			      android:layout_marginTop="-25dp"
			      android:layout_gravity="center_horizontal" android:textSize="20sp" android:text="@string/obd_speed_test"/>
		     </LinearLayout>  
		     <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"  
	            android:layout_marginTop="40dp" android:layout_weight="1" android:orientation="vertical">
			     <ImageButton android:id="@+id/vehicle_alarm_button" android:layout_width="wrap_content"    
			        android:layout_height="wrap_content" android:background="@drawable/main_vehicle_alarm"
			        />  
			     <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			      android:layout_marginTop="-25dp"
			      android:layout_gravity="center_horizontal" android:textSize="20sp" android:text="@string/obd_alarm"/>
		     </LinearLayout> 
	    </LinearLayout>   
    </FrameLayout>
</LinearLayout>