<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gauge="http://schemas.android.com/apk/res/com.george.obdreader"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/obd_connected"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/obd_con" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/obd_connected"
            android:src="@drawable/gps_con"
            android:visibility="gone" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@+id/obd_connected"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/intake_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="65dp"
            android:layout_toLeftOf="@+id/result"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/intake_manifold_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/intake_temperature"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-50dp"
        android:gravity="center_horizontal"
        android:visibility="visible" >

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="75dp"
            android:orientation="vertical" >

            <com.george.obdreader.GaugeView
                android:id="@+id/fuel_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone"
                gauge:divisions="5"
                gauge:rangeColors="@array/fuel_rangeColors"
                gauge:rangeValues="@array/fuel_ranges"
                gauge:scaleEndValue="20"
                gauge:showInnerRim="true"
                gauge:showOuterBorder="false"
                gauge:showOuterRim="false"
                gauge:showOuterShadow="true"
                gauge:subdivisions="4" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="75dp"
            android:orientation="vertical" >

            <com.george.obdreader.GaugeView
                android:id="@+id/speed_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone"
                gauge:divisions="5"
                gauge:rangeColors="@array/speed_rangeColors"
                gauge:rangeValues="@array/speed_ranges"
                gauge:scaleEndValue="220"
                gauge:showInnerRim="true"
                gauge:showOuterBorder="false"
                gauge:showOuterRim="false"
                gauge:showOuterShadow="true"
                gauge:subdivisions="8" />
            
        </FrameLayout>

        <FrameLayout
            android:layout_width="285dp"
            android:layout_height="285dp"
            android:layout_gravity="center" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal" 
                android:padding="20dp">

                <RelativeLayout
                    android:id="@+id/left_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/fly_left" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/right_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/left_top"
                    android:layout_toRightOf="@+id/left_top"
                    android:background="@drawable/fly_right" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/left_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/fly_bottom_left" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/right_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/left_bottom"
                    android:background="@drawable/fly_bottom_right" >
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:src="@drawable/gauge" />

            <com.george.obdreader.GaugeView
                android:id="@+id/rpm_view"
                android:layout_width="285dp"
                android:layout_height="285dp"
                gauge:divisions="5"
                gauge:rangeColors="@array/rpm_rangeColors"
                gauge:rangeValues="@array/rpm_ranges"
                gauge:scaleEndValue="7000"
                gauge:showInnerRim="true"
                gauge:showOuterBorder="false"
                gauge:showOuterRim="false"
                gauge:showOuterShadow="true"
                gauge:subdivisions="2" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_gravity="bottom"
            android:background="@drawable/main_function_bg"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/trouble_codes_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_vehicle_check" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-25dp"
                    android:text="@string/obd_check"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/health_setting_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/health_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-25dp"
                    android:text="@string/obd_health"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/volume_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_volume"
                    android:src="@drawable/main_volume_mute" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/speed_test_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_speed_test" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-25dp"
                    android:text="@string/obd_speed_test"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/vehicle_alarm_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_vehicle_alarm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-25dp"
                    android:text="@string/obd_alarm"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>