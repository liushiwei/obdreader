<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:carit="http://schemas.android.com/apk/res/com.george.ObdApplication"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/alarm_background"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal">
	    <Button android:id="@+id/home_button" android:layout_width="60dp" android:layout_height="wrap_content"
	        android:background="@drawable/home_button" android:onClick="functionCallback"/>
	    <TextView android:layout_width="680dp" android:layout_height="60dp" android:gravity="center_vertical" 
	     	android:paddingLeft="30dp" android:textColor="@android:color/white" android:text="@string/obd_health" 
	     	android:textSize="24sp"/>
	    <Button android:id="@+id/back_button" android:layout_width="60dp" android:layout_height="wrap_content"
			android:background="@drawable/back_button" android:onClick="functionCallback" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:gravity="center_horizontal">
		<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
	        android:background="@drawable/health_setting_bg" android:orientation="vertical"
	        android:layout_marginLeft="20dp">
			<LinearLayout android:layout_width="wrap_content" android:layout_height="50dp"
	        	android:orientation="horizontal" android:gravity="center_vertical" android:paddingLeft="10dp">
				<View android:layout_width="28dp" android:layout_height="29dp"
		       	 	android:background="@drawable/health_on"/>
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
				    android:textSize="28sp"
					android:text="@string/health_time_setting"/>
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent" android:layout_height="119dp"
	        	android:orientation="horizontal" android:layout_marginTop="40dp" 
	        	android:gravity="bottom|center_horizontal">	
	        	<LinearLayout android:layout_width="66dp" android:layout_height="fill_parent" 
	        	    android:layout_marginLeft="20dp">	
			    	
			    </LinearLayout>
			    <LinearLayout android:layout_width="66dp" android:layout_height="fill_parent" 
			        android:layout_marginLeft="20dp">	
	     		</LinearLayout>
	     		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
				    android:text="@string/health_month"/>
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
	        	android:orientation="horizontal" android:layout_marginTop="10dp"
	        	android:gravity="center_horizontal">
				<Button android:id="@+id/health_time_ok" android:layout_width="95dp" android:layout_height="52dp"
				    android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"
				    android:textColor="@android:color/white"  android:textSize="28sp"
				    android:background="@drawable/setting_button" android:text="@string/ok"
				    android:onClick="functionCallback"/>
			</LinearLayout>
		</LinearLayout>
    </LinearLayout>
    <Button android:id="@+id/health_detail" android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"
	    android:textColor="@android:color/white" android:textSize="28sp"
	    android:text="@string/health_detail" android:background="@drawable/health_setting_btn"
	    android:onClick="functionCallback"/>
</LinearLayout>